<form id="register-form" method="post" action="/api/users/register">
    <h2 class="title is-4">Registrarse</h2>
    <div class="field">
      <label class="label">Nombre</label>
      <div class="control">
        <input class="input" id="firstName" name="firstName" type="text" placeholder="Introduce tu nombre" required>
      </div>
    </div>
    <div class="field">
      <label class="label">Apellido</label>
      <div class="control">
        <input class="input" id="lastName" name="lastName" type="text" placeholder="Introduce tu apellido" required>
      </div>
    </div>
    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <input class="input" id="email" name="email" type="email" placeholder="Introduce tu email" required>
      </div>
    </div>
    <div class="field">
      <label class="label">Contraseña</label>
      <div class="control">
        <input class="input" id="password" name="password" type="password" placeholder="Introduce tu contraseña" required>
      </div>
    </div>
    <button class="button is-link" id="submit-register">Registrarse</button>
    <button class="button is-text" id="cancel-register">Cancelar</button>
</form>